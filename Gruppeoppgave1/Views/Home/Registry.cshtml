
@{
    ViewBag.Title = "Registry";
}
@model Gruppeoppgave1.Model.Bruker
<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Login.css">
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black; font-size:18px">
        <div class="container">
            <div class="navbar-header">
                <button data-target="#navbar-collapse-02" data-toggle="collapse" class="navbar-toggle" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home/Index" class="navbar-brand brand"><i class="fa fa-codepen"></i><img src="~/Content/Image/Logo.png" alt="Logo" style="width:100px;height:30px;"></a>
            </div>
            <div id="navbar-collapse-02" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">



                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="~/Home/Registry"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="/Home/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>

                </ul>
            </div><!-- /.navbar-collapse -->
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()




        <div class="card card-container" style="max-width:450px; padding:20px 120px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form class="form-signin">



                <div class="control-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.Fornavn, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Fornavn, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fornavn, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.Etternavn, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Etternavn, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Etternavn, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.Adresse, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Adresse, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })

                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.Telefon, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })

                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.Fødselsdato, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Fødselsdato, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Fødselsdato, "", new { @class = "text-danger" })

                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.Epost, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Epost, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Epost, "", new { @class = "text-danger" })

                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.Passord, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Passord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Passord, "", new { @class = "text-danger" })
                    <p />
                </div>

                @if (!ViewBag.finnesAllerede)
                {
                    <p></p>
                }
                else
                {
                    <p style="color:red;">Feil! Brukeren finnes allerede, prøv noe nytt!</p>
                }

                <div class="control-group">
                    <button class="btn btn-success btn-lg btn-primary btn-block btn-signin" type="submit">Registrate</button>
                </div>
            </form>
        </div>


        <!-- /form -->

    }
</body>
</html>
